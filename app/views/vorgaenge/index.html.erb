<h1>Vorgänge</h1>
<%= link_to 'Neuer Vorgang', new_vorgang_path %>
<table>
  <tr>
    <th>Referenz</th>
    <th>Angaben</th>
  </tr>

  <% @vorgaenge.each do |vorgang| %>
    <tr>
      <td><%= vorgang.referenz %></td>
      <td><%= vorgang.angaben %></td>
      <td><%= link_to 'Anzeigen', vorgang_path(vorgang) %></td>
      <td><%= link_to 'Bearbeiten', edit_vorgang_path(vorgang) %></td>
      <td><%= link_to 'Löschen', vorgang_path(vorgang),
              method: :delete,
              data: { confirm: 'Sind Sie sicher?' } %></td>

    </tr>
  <% end %>
</table>
